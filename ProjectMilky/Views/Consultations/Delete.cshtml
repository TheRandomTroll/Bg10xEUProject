@model ProjectMilky.Models.Consultation

@{
    ViewBag.Title = "Изтриване на консултация";
}

<h2>@ViewBag.Title</h2>

<h3>Сигурни ли сте, че искате да изтриете тази консултация?</h3>
<div>
    <h4>Consultation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Тема на консултацията
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Линк към YouTube Livestream
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YoutubeUrl)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Обратно към списъка", "Index", null, new { @class = "btn btn-default" }) |
            <input type="submit" value="Изтрий" class="btn btn-danger"/> 
        </div>
    }
</div>
