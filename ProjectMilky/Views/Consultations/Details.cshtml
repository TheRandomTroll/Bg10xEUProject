@model ProjectMilky.Models.Consultation

@{
    ViewBag.Title = "Детайли за консултация";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Consultation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Тема на консултацията
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <br />
        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <br />
        <dt>
            Линк към YouTube Livestream
        </dt>

        <dd>
            @Html.DisplayFor(model => model.YoutubeUrl)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Обратно към списъка", "Index", null, new { @class = "btn btn-danger" })
</p>
