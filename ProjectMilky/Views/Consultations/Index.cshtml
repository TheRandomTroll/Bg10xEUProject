@model IEnumerable<ProjectMilky.Models.Consultation>

@{
    ViewBag.Title = "Index";
}

<h2>All Consultations</h2>

@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayName("Teacher Name")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @{ var fullName = item.Teacher.FirstName + " " + item.Teacher.LastName;}
                @Html.DisplayText(fullName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @if (User.IsInRole("Teacher") && User.Identity.Name == item.Teacher.UserName)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                     @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                }
            </td>
        </tr>
                    }

</table>
