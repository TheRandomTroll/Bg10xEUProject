@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Добре дошли, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: new {area = string.Empty}, htmlAttributes: new { title = "Manage", style = "color: white"})
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color: white">Изход</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрирай се", "Register", "Account", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "registerLink", style = "color: white" })</li>
        <li>@Html.ActionLink("Влез", "Login", "Account", routeValues: new { area = string.Empty }, htmlAttributes: new { id = "loginLink", style = "color: white" })</li>
    </ul>
}
