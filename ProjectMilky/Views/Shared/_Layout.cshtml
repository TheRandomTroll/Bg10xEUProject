<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - E-School</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:lawngreen;">
        <div class="container">
            <div class="navbar-header" style=" min-height: 40px; max-height: 40px; height: 40px; ">

                <a class="navbar-brand" href="/Home/Index">
                    <img src="@Url.Content("~/Content/logo2.png")" style="width: 30px; height: 35px; " alt="Logo"/></a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="buttons">@Html.ActionLink("Index", "Index", "Home", null, new { @style = "color:red" })</li>
                    <li class="buttons">@Html.ActionLink("About", "About", "Home", null, new { @style = "color:red" })</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <span style="color:red">Schools</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("TUES", "TUES", "Home", null, new { @style = "color:red;background-color:white" })</li>
                            <li>@Html.ActionLink("NPMG", "NPMG", "Home", null, new { @style = "color:white;background-color:green" })</li>
                            <li>@Html.ActionLink("John Atanassov", "JohnAtanassov", "Home", null, new { @style = "color:green;background-color:red" })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contacts", "Contact", "Home", null, new { @style = "color:red" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - E-School</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
